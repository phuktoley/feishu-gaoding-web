# ==================== 数据库配置 ====================
# MySQL 连接字符串
# 格式: mysql://用户名:密码@主机:端口/数据库名
DATABASE_URL="mysql://root:password@localhost:3306/feishu_gaoding"

# ==================== 认证配置 ====================
# JWT 密钥（用于 session 签名，请使用随机字符串，至少 32 字符）
# 生成方法: openssl rand -base64 32
JWT_SECRET="your-random-secret-key-at-least-32-characters"

# ==================== OAuth 配置 ====================
# Manus OAuth 配置（如使用 Manus 平台部署）
VITE_APP_ID="your-app-id"
OAUTH_SERVER_URL="https://api.manus.im"
VITE_OAUTH_PORTAL_URL="https://manus.im/login"

# ==================== 应用配置 ====================
# 服务端口（默认 3000）
PORT=3000

# Node 环境（development 或 production）
NODE_ENV=development

# ==================== 存储配置（可选）====================
# 如果需要使用 S3 存储，配置以下变量
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# S3_BUCKET="your-bucket-name"
